generator client {
  provider = "prisma-client-js"
  envFiles        = ["../.env", "./.env"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  name        String?
  email       String    @unique
  phoneNumber String?
  cpf         String    @unique
  age         Int?
  addresses   Address[]
  role        Role?
  clients     Client[]  @relation("ConsultorClientes")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Client {
  id           Int       @id @default(autoincrement())
  name         String?
  email        String    @unique
  phoneNumber  String?
  cpf          String    @unique
  age          Int?
  addresses    Address[]
  consultant   User?     @relation("ConsultorClientes", fields: [consultantId], references: [id])
  consultantId Int?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Address {
  id         Int     @id @default(autoincrement())
  zipCode    String?
  state      String?
  street     String?
  additional String?
  userId     Int?
  user       User?   @relation(fields: [userId], references: [id])
  clientId   Int?
  client     Client? @relation(fields: [clientId], references: [id])
}

enum Role {
  ADMIN
  CONSULTANT
}
